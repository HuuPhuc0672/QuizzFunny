<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_back"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/btn_playgame"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_marginTop="572dp"
        android:gravity="center"
        android:text="Play Game"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:backgroundTint="#ff3399"
        android:background="@drawable/ic_radiu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btn_outgame"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Out Game"
        android:textColor="@color/black"
        android:backgroundTint="#ff3333"
        android:background="@drawable/ic_radiu"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_playgame" />

</androidx.constraintlayout.widget.ConstraintLayout>